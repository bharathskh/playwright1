{
  "name": "playwright-enterprise-framework",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test tests/ui --reporter=html",
    "test:api": "playwright test tests/api --reporter=list",
    "test:ci": "playwright test --reporter=dot",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report || true",
    "allure:open": "allure open ./allure-report || true",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "csv-parse": "^5.3.6",
    "dotenv": "^16.0.0",
    "mysql2": "^3.3.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/pg": "^8.15.5",
    "allure-commandline": "^2.13.9",
    "allure-playwright": "^2.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
